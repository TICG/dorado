@model DataArray
@{

    ViewBag.Title = "查看分类数据";
}
@section Style{}
@section HeadScript{
}
<div class="container">
    <div id="info" control="info" class="row span24 form-horizontal">
        <div class="row">
            <div class="control-group">
                <label class="control-label" for="parentid">
                    <s>*</s>
                    父类名称：</label>
                <div class="controls">
                    @Html.Raw(@Model["parentkindname"].ToString().Length == 0 ? "已是顶级分类" : @Model["parentkindname"].ToString()) </div> </div></div>
        <div class="row">
            <div class="control-group">
                <label class="control-label">
                    名称：</label>
                <div class="controls">
                    @Html.Raw(Model["name"].ToString())
                </div> </div> </div>
        <div class="row">
            <div class="control-group">
                <label class="control-label">
                    分类编码：</label>
                <div class="controls">
                    @Html.Raw(Model["code"].ToString())
                </div> </div> </div>
        <div class="row">
            <div class="control-group">
                <label class="control-label">
                    排序号：</label>
                <div class="controls">
                    @Html.Raw(Model["displayorder"].ToString())
                </div> </div> </div>
        <div class="row">
            <div class="control-group">
                <label class="control-label">
                    系统分类：</label>
                <div class="controls">
                    @Html.Raw(Model["issystem"].ToBool() ? "是" : "否")
                </div> </div> </div>
        <div class="row">
            <div class="control-group">
                <label class="control-label">
                    搜索引擎友好名称：</label>
                <div class="controls">
                    @Html.Raw(Model["slug"].ToString())
                </div> </div> </div>
<div class="row">
            <div class="control-group control-row4">
                <label class="control-label">
                    SEO标题：</label>
                <div class="controls">
                    @Html.Raw(Model["seotitle"].ToString())
                </div>
            </div>
        </div>
        <div class="row">
            <div class="control-group control-row4">
                <label class="control-label">
                    SEO关键字：</label>
                <div class="controls">
                    @Html.Raw(Model["seokeywords"].ToString())
                </div>
            </div>
        </div>
        <div class="row">
            <div class="control-group control-row4">
                <label class="control-label">
                    SEO描述：</label>
                <div class="controls">
                    @Html.Raw(Model["seodescription"].ToString())
                </div>
            </div>
        </div>
        <div class="row">
            <div class="control-group control-row4">
                <label class="control-label">
                    描述：</label>
                <div class="controls">
                    @Html.Raw(Model["description"].ToString())
                </div> </div> </div>
        <div class="row form-actions actions-bar actionbar">
            <div class="span13 offset3 ">
                <a  id="close"  href="#" act="direct" class="button">
                    关闭</a>
                <a  id="reload"  href="#" act="direct" class="button">
                    刷新</a>
                <a href="#" title="新增分类" data-href="/admin/content/kindadd" data-id="content_kindadd" class="button button-primary page-action direct-lnk">
                    新增</a>
                <a href="#" title="编辑分类" data-href="/admin/content/kindedit?id=@Model["id"].ToString()" data-id="content_kindedit_@Model["id"].ToString()" class="button button-primary page-action direct-lnk">编辑</a>
            </div>
        </div>
    </div>
</div>

@section FootScript
{
    <script type="text/javascript">

        function Act_Before(o, c, p) {
            switch (o.id) {
            case "close":
                closeTab();
                return false;
            case "reload":
                reloadTab();
                return false;
            }
            return true;
        }

        function Act_After(o, c, p) {
        }

        $(document).ready(function () {
           F.init("info");
        });
    </script>
}